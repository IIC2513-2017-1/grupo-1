<% provide(:title, 'Login') %>
<% provide(:header, 'Ingresa a la aplicación') %>

<div id="login-form">
  <%= form_for :session, url: login_path do |f| %>
    <div class="form-group">
      <%= f.label :mail %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :contraseña %>
      <%= f.password_field :password %>
    </div>
    <div class="form-group">
      <%= f.submit 'Login' %>
    </div>
  <% end %>
  <p>
    ¿No tienes cuenta aún? Registrate <%= link_to 'aqui', new_user_path %>.
  </p>
</div>
