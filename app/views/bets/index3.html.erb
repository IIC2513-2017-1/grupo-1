<%= provide(:title, 'Apuestas principales') %>
<%= provide(:header, 'Apuestas') %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Sport</th>
      <th>Start date</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.id %></td>
        <td><%= bet.sport %></td>
        <td><%= bet.start_date %></td>
        <td><%= bet.country %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bet', new_bet_path %>
