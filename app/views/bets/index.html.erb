<%= provide(:title, 'Apuestas principales') %>
<%= provide(:header, 'Apuestas') %>

<%= form_tag('/make_up') do %>
<div><%= submit_tag 'Confirmar seleccion' %></div>
  <table class="bets-table">
    <thead>
      <tr>
        <th class="text-center"> Sport </th>
        <th class="text-center"> Start date </th>
        <th class="text-center"> Country </th>
        <th class="text-center"> Seleccion a apostar </th>
      </tr>
    </thead>
    <tbody class="table-hover">
      <% @bets.each do |bet| %>
        <tr>
          <td class="text-left"><%= bet.sport %></td>
          <td class="text-left"><%= bet.start_date %></td>
          <td class="text-left"><%= bet.country %></td>
          <td class="text-center">
            <%= select_tag "competitors#{bet.id}",
              options_from_collection_for_select(bet.competitors, "id", "name"),
              include_blank: true, required: true %>
          </td>
          <!-- <td><%= check_box_tag bet.id %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
