<header class="header">
  <div>
    <%= link_to root_path do %>
      <h2 class="page-logo">Mr. MeesBet</h2>
    <% end %>
  </div>
  <nav>
    <% if current_user%>
      <ul>
        <% if current_user.admin? %>
          <li><%= link_to 'Usuarios', users_path %></li>
        <% end %>
        <li><%= link_to 'Aceptar una MeesBet', bet_list_path %></li>
        <li><%= link_to 'Meesbets de amigos', friends_bet_list_path %></li>
      </ul>
      <ul class="pull-right">
        <li>
          <a class="dropbtn"><%= current_user.username %>&#9660;</a>
          <ul class="header-link dropdown-content" id="myDropdown">
            <li><%= link_to 'Perfil', user_path(current_user) %></li>
            <li><%= link_to 'Historial', record_user_path(current_user) %></li>
            <li><%= link_to 'Notificaciones', notifications_user_path(current_user) %></li>
            <% if current_user.admin? %>
              <li><%= link_to 'Asignaciones', assignations_path %></li>
              <li><%= link_to 'Actualizar resultados', results_path %></li>
            <% end %>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <ul class="pull-right">
        <li><%= link_to 'Log in', login_path %></li>
      </ul>
    <% end %>
  </nav>
</header>
