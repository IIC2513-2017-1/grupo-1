<header class="header">
  <div>
    <%= link_to root_path do %>
      <h2 class="page-logo">Mr. MeesBet</h2>
    <% end %>
  </div>
  <nav>
    <% if current_user%>
      <ul>
        <% if current_user.admin? %>
          <li><%= link_to 'Usuarios', users_path %></li>
          <li><%= link_to 'MeesBets', user_bets_path %></li>
        <% end %>
        <li><%= link_to 'Aceptar una MeesBet',bet_list_path %></li>
      </ul>
      <ul class="pull-right header-link">
        <li><%= link_to 'Perfil', user_path(current_user) %></li>
        <li><%= link_to 'Log out', logout_path, method: :delete %></li>
      </ul>
    <% else %>
      <ul class="pull-right">
        <li><%= link_to 'Log in', login_path %></li>
      </ul>
    <% end %>
  </nav>
</header>
