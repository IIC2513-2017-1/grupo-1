<%= provide(:title, 'MrMeesBet') %>
<%= provide(:header, "#{@user_bet.name}") %>

<p>
  <strong>User_id:</strong>
  <%= @user_bet.user_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user_bet.description %>
</p>

<p>
  <strong>Challenger amount:</strong>
  <%= @user_bet.challenger_amount %>
</p>

<p>
  <strong>Gambler amount:</strong>
  <%= @user_bet.gambler_amount %>
</p>

<p>
  <strong>Bet limit:</strong>
  <%= @user_bet.bet_limit %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @user_bet.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @user_bet.end_date %>
</p>
<% if current_user.admin? %>
  <%= link_to 'Eliminar', user_user_bet_path(@user, @user_bet ), method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Ir al usuario', @user %> |
  <%= link_to 'Lista de MeesBets', bet_list_path %>
<% end %>
<% if @user == current_user %>
  <%= link_to 'Editar', edit_user_user_bet_path(@user, @user_bet) %> |
<% end %>

<% unless current_user.admin? %>
  <%= link_to 'Volver atras', user_user_bets_path(@user) %>
<% end %>
