<%= provide(:title, 'MrMeesBet') %>
<%= provide(:header, "#{@user_bet.name}") %>

<div class="pull-right">
  <% if @user == current_user %>
    <%= link_to "Mis MeesBets", bet_list_path, class: 'btn-primary' %>
    <%= link_to 'Eliminar', user_user_bet_path(@user, @user_bet ), method: :delete, class: 'btn-primary danger', data: { confirm: 'Are you sure?' } %>
  <% elsif current_user.admin? %>
    <%= link_to 'Eliminar', user_user_bet_path(@user, @user_bet ), method: :delete, class: 'btn-primary danger', data: { confirm: 'Are you sure?' } %>
    <%= link_to "MeesBets de #{@user.username}", user_user_bets_path(@user), class: 'btn-primary' %>
  <% end %>
</div>

<p>
  <strong>User_id:</strong>
  <%= @user_bet.user_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user_bet.description %>
</p>

<p>
  <strong>Challenger amount:</strong>
  <%= @user_bet.challenger_amount %>
</p>

<p>
  <strong>Gambler amount:</strong>
  <%= @user_bet.gambler_amount %>
</p>

<p>
  <strong>Bet limit:</strong>
  <%= @user_bet.bet_limit %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @user_bet.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @user_bet.end_date %>
</p>
