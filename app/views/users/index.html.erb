<%= provide(:title, 'Usuarios') %>
<%= provide(:header, 'Usuarios') %>

<div class="user-search">
  <%= form_tag search_users_path, method: 'get' do %>
    <div class="form-group">
      <%= label_tag 'Nombre de usuario' %>
      <%= text_field_tag :user, @user %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Buscar usuario' %>
    </div>
  <% end %>
</div>

<% @users.each do |user| %>
  <table class="user-index-table">
    <tbody>
      <tr>
        <td> Nombre: </td>
        <td><%= link_to full_name(user), user %></td>
      </tr>
      <tr>
        <td> Usuario: </td>
        <td><%= user.username %></td>
      </tr>
      <tr>
        <td> Role: </td>
        <td><%= user.role %></td>
      </tr>
      <tr>
        <td> Mail: </td>
        <td><%= user.email %></td>
      </tr>
    </tbody>
  </table>
<% end %>
