<%= provide(:title, 'Usuarios') %>
<%= provide(:header, 'Usuarios') %>

<div class="user-search">
  <%= form_tag search_users_path, method: 'get' do %>
    <div class="form-group">
      <%= label_tag 'Nombre de usuario' %>
      <%= text_field_tag :user, @user %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Buscar' %>
    </div>
  <% end %>
</div>

<table class="rounded-corner-table user-index-table">
  <thead>
    <tr>
      <th>
      </th>
      <th>
        Nombre
      </th>
      <th>
        Usuario
      </th>
      <th>
        Mail
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td><%= link_to full_name(user), user %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
